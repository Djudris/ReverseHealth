{% comment %}
    Renders a collection card

    Accepts:
    - card_collection: {Object} Collection Liquid object
    - media_aspect_ratio: {String} Size of the product image card. Values are "square" and "portrait". Default is "square" (optional)
    - columns: {Number} 
    - extend_height: {Boolean} Card height extends to available container space. Default: false (optional)
    
    Usage:
    {% render 'card-collection' %}
{% endcomment %}

{%- liquid
  assign ratio = 1
  if card_collection.image and media_aspect_ratio == 'portrait'
    assign ratio = 0.8
  elsif card_collection.image and media_aspect_ratio == 'adapt'
    assign ratio = card_collection.image.aspect_ratio
  endif
  if ratio == 0 or ratio == nil
    assign ratio = 1
  endif
-%}

<div class="card-wrapper animate-arrow">
  <div class="card
    card--card
    {% if card_collection.image %} card--media{% else %} card--text{% endif %}
    color-{{ settings.card_color_scheme }} gradient
    {% if extend_height %} card--extend-height{% endif %}
    {% if card_collection.image == nil %} ratio{% endif %}"
    style="--ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;"
  >
    <div class="card__inner {% if card_collection.image %} ratio{% endif %}" style="--ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;">
      {%- if card_collection.image -%}
        <div class="card__media">
          <div class="media media--transparent">
            <img
              srcset="{%- if card_collection.image.width >= 165 -%}{{ card_collection.image | image_url: width: 165 }} 165w,{%- endif -%}
                {%- if card_collection.image.width >= 330 -%}{{ card_collection.image | image_url: width: 330 }} 330w,{%- endif -%}
                {%- if card_collection.image.width >= 535 -%}{{ card_collection.image | image_url: width: 535 }} 535w,{%- endif -%}
                {%- if card_collection.image.width >= 750 -%}{{ card_collection.image | image_url: width: 750 }} 750w,{%- endif -%}
                {%- if card_collection.image.width >= 1000 -%}{{ card_collection.image | image_url: width: 1000 }} 1000w,{%- endif -%}
                {%- if card_collection.image.width >= 1500 -%}{{ card_collection.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                {%- if card_collection.image.width >= 3000 -%}{{ card_collection.image | image_url: width: 3000 }} 3000w,{%- endif -%}
                {{ card_collection.image | image_url }} {{ card_collection.image.width }}w"
              src="{{ card_collection.image | image_url: width: 1500 }}"
              sizes="
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: columns }}px,
              (min-width: 750px) {% if columns > 1 %}calc((100vw - 10rem) / 2){% else %}calc(100vw - 10rem){% endif %},
              calc(100vw - 3rem)"
              alt="{{ card_collection.title | escape }}"
              height="{{ card_collection.image.height }}"
              width="{{ card_collection.image.width }}"
              loading="lazy"
              class="motion-reduce rounded-image"
            >
          </div>
        </div>
      {%- endif -%}
      <div class="card__content" style="padding-left:0!important; padding-right: 0!important; ">
        <div class="card__information">
          <h3 class="card__heading">
            <a{% if card_collection == blank %} role="link" aria-disabled="true"{% else %} href="{{ card_collection.link }}"{% endif %} class="full-unstyled-link">
              {%- if card_collection.title != blank -%}
                {{- card_collection.title | escape -}}
              {%- else -%}
                {{ 'onboarding.collection_title' | t }}
              {%- endif -%}
              {%- if card_collection.text == blank -%}<span class="icon-wrap">{% render 'icon-arrow' %}</span>{% endif %}
            </a>
          </h3>
          {%- if card_collection.text != blank -%}
            <p class="card__caption">
              {{- card_collection.text | strip_html | truncatewords: 12 -}}<span class="icon-wrap">&nbsp;{% render 'icon-arrow' %}</span>
            </p>
          {%- endif -%}
        </div>
      </div>
    </div>
    {% if settings.card_style == 'card' or card_collection.image %}
      <div class="landing-collection-card">
          <h3 class="landing-card-header">
            <a href="{{ card_collection.link }}" class="full-unstyled-link">
              {%- if card_collection.title != blank -%}
                {{- card_collection.title | escape -}}
              {%- else -%}
                {{ 'onboarding.collection_title' | t }}
              {%- endif -%}
              {%- if card_collection.image or card_collection.text == blank -%}<span class="icon-wrap"></span>{% endif %}
            </a>
          </h3>
          {%- if card_collection.image == nil and card_collection.text != blank -%}
            <p class="card__caption">
              {{- card_collection.text | strip_html | truncatewords: 12 -}}<span class="icon-wrap">&nbsp;{% render 'icon-arrow' %}</span>
            </p>
          {%- endif -%}
      <div class="landing-shop-button-padding justify-content-center pt-12">
        <a href="{{ card_collection.link }}" class="d-flex justify-content-center align-items-center btn btn-primary landing-shop-button">shop now</a>
      </div>
      </div>
    {% endif %}
  </div>
</div>

{{ 'single-product-how.css' | asset_url | stylesheet_tag }}
<section class="how-bg" style="background-color: {{ product.metafields.my_fields.how_to_use_background_color }};">
    <div class="container position-relative">
        <img class="how-svg-1 d-lg-block d-none" src="{{ 'how.svg' | asset_url }}" alt="Review">
        <img class="how-svg-2 d-block d-lg-none" src="{{ 'how-2.svg' | asset_url }}" alt="Review">
        <h2 class="how-title text-center">{{ product.metafields.my_fields.use_heading }}</h2>
        <div class="how-products d-lg-inline-flex flex-column flex-lg-row d-flex justify-content-evenly w-100">
            {% if product.metafields.my_fields.consumption_heading_1 %}
                <div class="d-flex align-items-center flex-row flex-lg-column max-w-30">
                    <img class="how-icon" src="{{ product.metafields.my_fields.consumption_icon_1 | img_url: '800x800' }}" alt="Smoothies">
                    <div class="d-flex flex-column">
                        <div class="px-20"><h3 class="how-subtitle text-lg-center">{{ product.metafields.my_fields.consumption_heading_1 }}</h3></div>
                        <div class="px-20"><p class="how-text text-lg-center">{{ product.metafields.my_fields.consumption_text_1 }}</p></div>
                    </div>

                </div>
            {% endif %}
            {% if product.metafields.my_fields.consumption_heading_2 %}
                <div class="d-flex align-items-center flex-row flex-lg-column">
                    <img class="how-icon" src="{{ product.metafields.my_fields.consumption_icon_2 | img_url: '800x800' }}" alt="Smoothies">
                    <div class="d-flex flex-column">
                        <div><h3 class="how-subtitle text-lg-center">{{ product.metafields.my_fields.consumption_heading_2 }}</h3></div>
                        <div><p class="how-text text-lg-center">{{ product.metafields.my_fields.consumption_text_2 }}</p></div>
                    </div>
                </div>
            {% endif %}
            {% if product.metafields.my_fields.consumption_heading_3 %}
                <div class="d-flex align-items-center flex-row flex-lg-column max-w-30">
                    <img class="how-icon" src="{{ product.metafields.my_fields.consumption_icon_3 | img_url: '800x800' }}" alt="Smoothies">
                    <div class="d-flex flex-column">
                        <div class="px-20"><h3 class="how-subtitle text-lg-center">{{ product.metafields.my_fields.consumption_heading_3 }}</h3></div>
                        <div class="px-20"><p class="how-text text-lg-center">{{ product.metafields.my_fields.consumption_text_3 }}</p></div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</section>


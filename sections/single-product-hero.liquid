                            {% for met_product in product.metafields.my_fields.met_products.value %}
                                {% assign out_of_stock = true %}
                                {% if met_product.variants[0].available or met_product.variants[1].available or met_product.variants[2].available %}
                                    {% assign out_of_stock = false %}
                                {% endif %}
                                {% if count == 3 %}
                                    {% break %}
                                {% endif %}
                                <div class="product-item d-flex justify-content-evenly align-items-center"
                                     data-single-variant-id="{{ met_product.variants[0].id }}"
                                     data-three-variant-id="{{ met_product.variants[1].id }}"
                                     data-five-variant-id="{{ met_product.variants[2].id }}"
                                     data-single-price="{{ met_product.variants.first.price | money }}"
                                     data-three-pack-price="{{ met_product.variants[1].price | divided_by: 3 | money }}"
                                     data-five-pack-price="{{ met_product.variants[2].price | divided_by: 5 | money }}"
                                     data-three-total-price="{{ met_product.variants[1].price | money }}"
                                     data-five-total-price="{{ met_product.variants[2].price | money }}">
                                    <div class="product-checkbox">
                                        <input type="checkbox" class="product-checkbox js--product-checkbox" {% if out_of_stock == true %} disabled {% endif %}name="product_checkbox_{{ forloop.index }}">
                                    </div>
                                    <div>
                                        <img class="desktop-image" src="{{ met_product.featured_image | img_url: '180x180' }}" alt="{{ met_product.featured_image.alt }}" loading="lazy">
                                        <img class="mobile-image" src="{{ met_product.featured_image | img_url: '120x120' }}" alt="{{ met_product.featured_image.alt }}" loading="lazy">
                                    </div>
                                    <div class="d-flex flex-column w-100 justify-content-center">
                                        <div class="d-flex justify-content-between align-items-center flex-wrap">
                                            <p class="met-product-title">{{ met_product.title }}</p>
                                            <p class="money">{{ met_product.variants.first.price | money }} / per item</p>
                                        </div>
                                        <p class="js--total-price">Save when buying a 3-pack or 5-pack</p>
                                        <div class="select-container">
                                            {% if out_of_stock == true %}
                                                <select class="product-select js--product-select" name="product_select_{{ forloop.index }}" disabled>
                                                    <option value="out_of_stock" disabled selected>Out of stock</option>
                                                </select>
                                            {% else %}
                                                <select class="product-select js--product-select" name="product_select_{{ forloop.index }}">
                                                    <option value="single" {% if met_product.variants[0].available == false %}disabled{% endif %}>Single</option>
                                                    <option value="3-pack" {% if met_product.variants[1].available == false %}disabled{% endif %}>3-pack</option>
                                                    <option value="5-pack" {% if met_product.variants[2].available == false %}disabled{% endif %}>5-pack</option>
                                                </select>
                                            {% endif %}

                                        </div>
                                        <div class="mt-2">
                                            <a href="{{ met_product.url }}" target="_blank" class="contact-link" style="font-size: 16px;">Learn more...</a>
                                        </div>
                                    </div>
                                </div>
                                {% assign count = count | plus: 1 %}
                            {% endfor %}
                            <input type="submit" value="Add to cart" id="met-button" class="btn btn-add-to-cart" disabled/>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>

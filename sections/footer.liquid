{{ 'footer.css' | asset_url | stylesheet_tag }}

<footer id="section-footer" class="w-100">
    <div class="footer-bg">
        <div class="container p-lg-0">
            <div class="row w-100">
                <div class="col-lg-5 col-12 order-1">
                    {%- if section.settings.logo != blank -%}
                        <img src="{{ section.settings.logo | image_url }}"
                             class="footer-logo"
                             loading="lazy"
                             alt="{{ section.settings.footer-title | default: shop.name | escape }}"
                        >
                    {%- else -%}
                        <h2 class="footer-title">{{ section.settings.footer-title }}</h2>
                    {%- endif -%}
                    {% comment %}<p class="footer-text mb-0 footer-border-mobile">{{ section.settings.footer-text }}</p>{% endcomment %}
                </div>
                <div class="col-lg-2 col-6 order-lg-2 order-3">
                    <h3 class="footer-subtitle">{{ section.settings.footer-subtitle-1 }}</h3>
                    <a class="footer-href text-decoration-none" href="/">Home</a>
                    <a class="footer-href text-decoration-none" href="/collections/all">Shop</a>
                    {% comment %}<a class="footer-href text-decoration-none" href="/pages/reviews">Reviews</a>{% endcomment %}
                    <a class="footer-href text-decoration-none" href="/pages/contact">Contact</a>
                </div>
                <div class="col-lg-3 col-6 order-lg-3 order-4">
                    <h3 class="footer-subtitle">{{ section.settings.footer-subtitle-2 }}</h3>
                    <a class="footer-href text-decoration-none" href="/pages/terms-of-service">Terms & Conditions</a>
                    <a class="footer-href text-decoration-none" href="/pages/privacy-cookies">Privacy Policy</a>
                    <a class="footer-href text-decoration-none" href="/pages/refunds-and-cancellations">Refunds and Cancellations</a>
                </div>
                <div class="col-lg-2 col-12 d-lg-flex justify-content-lg-end order-2 order-lg-4">
                    <div class="text-lg-center">
                        <h3 class="footer-subtitle">{{ section.settings.footer-subtitle-3 }}</h3>
                        <div class="d-flex d-lg-block justify-content-between">
                            <a href="https://play.google.com/store/apps/details?id=reverse.health.app&hl=en&gl=US" target="blank">
                                <img loading="lazy" class="footer-download d-lg-block" src="{{ 'GooglePlay.png' | asset_url }}" alt="Download on google play">
                            </a>
                            <a href="https://apps.apple.com/app/reverse-health-weight-loss/id6464588020" target="blank">
                                <img loading="lazy" class="footer-download d-lg-block" src="{{ 'AppStore.png' | asset_url }}" alt="Download on apple store">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {% comment %}<div class="footer-social-icons">{% endcomment %}
                {% comment %}<a href="{{ section.settings.ig-url }}" class="text-decoration-none" target="blank">{% endcomment %}
                    {% comment %}<img loading="lazy" class="footer-fb-i" src="{{ 'instagram.svg' | asset_url }}" alt="Instagram icon">{% endcomment %}
                {% comment %}</a>{% endcomment %}
                {% comment %}<a href="{{ section.settings.fb-url }}" class="text-decoration-none footer-fb-i" target="blank">{% endcomment %}
                    {% comment %}<img loading="lazy" class="footer-fb-i" src="{{ 'facebook.svg' | asset_url }}" alt="Instagram icon">{% endcomment %}
                {% comment %}</a>{% endcomment %}
            {% comment %}</div>{% endcomment %}
            {% comment %}<div class="row d-flex justify-content-center">{% endcomment %}
                {% comment %}<div class="d-flex col-lg-6 col-12 justify-content-center">{% endcomment %}
                    {% comment %}<div class="footer-copyright-line w-100 text-center">{% endcomment %}
                        {% comment %}<p class="footer-copyright">Copyright @ Reverse Health. All rights reserved.{% endcomment %}
                        {% comment %}</p>{% endcomment %}
                    {% comment %}</div>{% endcomment %}
                {% comment %}</div>{% endcomment %}
            {% comment %}</div>{% endcomment %}
        </div>
    </div>
    <div class="footer-bg-2">
        <div class="container w-100">
            <div class="d-flex justify-content-center w-100">
                <div class="w-100">
                    <p class="footer-info-text text-lg-center">{{ section.settings.footer-text-information }}</p>
                </div>
            </div>
        </div>
    </div>
</footer>

{% schema %}
{
"name": "Values",
"settings": [
{
"id": "footer-title",
"type": "text",
"label": "Title",
"default":"reverse health"
},
{
"type": "image_picker",
"id": "logo",
"label": "t:sections.header.settings.logo.label"
},
{
"id": "footer-text",
"type": "text",
"label": "Footer text",
"default":"The first weight loss program designed for women's unique needs. The one that finally works with supplements that fill nutritional gaps due to aging."
},
{
"id": "ig-url",
"type": "text",
"label": "Instagram url",
"default":"https://www.instagram.com/reverse.program/"
},
{
"id": "fb-url",
"type": "text",
"label": "Facebook url",
"default":"https://www.facebook.com/reverseprogram"
},
{
"id": "footer-subtitle-1",
"type": "text",
"label": "Footer subtitle Nr.1",
"default":"General"
},
{
"id": "footer-subtitle-2",
"type": "text",
"label": "Footer subtitle Nr.2",
"default":"Legal"
},
{
"id": "footer-subtitle-3",
"type": "text",
"label": "Footer subtitle Nr.3",
"default":"Get The App"
},
{
"id": "footer-text-information",
"type": "text",
"label": "Footer bottom information text",
"default":"test The information contained on this website is NOT intended as medical advice. You are responsible for your own health and safety at all times. Please consult with a medical professional for any questions."
}
],
"presets": [
{
"name": "Values"
}
]
}
{% endschema %}

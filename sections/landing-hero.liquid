{{ 'landing-hero.css' | asset_url | stylesheet_tag }}
<section id="hero-id" class="position-relative landing-hero-bg">
    <img loading="lazy" class="landing-hero-feather-1 d-none d-lg-block" src="{{ 'landing_squares1.svg' | asset_url }}" alt="Squares">
    <img class="landing-hero-feather-2 d-lg-none" src="{{ 'landing_squares2.svg' | asset_url }}" alt="Squares">

    <div class="w-100 d-lg-none position-relative">
        <img loading="lazy" class="hero-yummy mobile" src="{{ 'hero-yummy-mobile.svg' | asset_url }}" alt="Hero Yummy">
        <img class="position-relative w-96 img-hero-mobile" src="{{ 'hero-mobile-new.png' | asset_url }}" alt="Hero picture" loading="lazy">
    </div>
    <div class="container position-unset">
        <div class="row position-unset">
            <div class="col-lg-6 col-12  pe-lg-5 d-flex align-items-center position-unset order-lg-1 order-2" id="textCol">
                <div class="w-100 hero-landing-text-block padding-square">
                    <h1 class="hero-title">
                        <span>{{ section.settings.hero-title }}</span>
                    </h1>
                    <h2 class=" hero-subtitle">{{ section.settings.hero-subtitle }}</h2>
                    <div class=" btn-padding-mobile">
                        <a href="{{ shop.url }}/collections/all">
                            <button class="btn btn-primary btn-top">check availability</button>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 position-unset col-12 order-lg-2 order-1 z-100 d-lg-block d-none" style="height: 538px">
                <div class="hero-abs-pic d-flex justify-content-end">
                    <div class="landing-hero-custom">
                        {% comment %}<img src="{{ 'hero-desktop-f.png' | asset_url }}" alt="Hero picture">{% endcomment %}
                        <img loading="lazy" class="hero-yummy desktop" src="{{ 'hero-yummy-desktop.svg' | asset_url }}" alt="Hero Yummy">
                        <img class="desk-hero-prod" src="{{ 'desktop-hero-product-new.png' | asset_url }}" alt="Hero picture" loading="lazy">
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<section class="position-relative hero-carousel-section">

    <div class="bg-blue">
        <div class="container p-0">
            <div id="hero-slider" class="row owl-carousel icon-slider">
                <div class="col-lg-2 w-100-sm d-flex flex-column justify-content-center align-items-center">
                    <div>
                        <img loading="lazy" src="{{ 'vegan_i.svg' | asset_url }}" alt="Vegan icon">
                    </div>
                    <div class="icons-text mt-3">
                        Vegan
                    </div>
                </div>
                <div class="col-lg-2 w-100-sm d-flex flex-column justify-content-center align-items-center">
                    <div>
                        <img loading="lazy" src="{{ 'sugar_i.svg' | asset_url }}" alt="Vegan icon">
                    </div>
                    <div class="icons-text mt-3">
                        Sugar free
                    </div>
                </div>
                <div class="col-lg-2 w-100-sm d-flex flex-column justify-content-center align-items-center">
                    <div>
                        <img loading="lazy" src="{{ 'gluten_i.svg' | asset_url }}" alt="Vegan icon">
                    </div>
                    <div class="icons-text mt-3">
                        Gluten free
                    </div>
                </div>
                <div class="col-lg-2 w-100-sm d-flex flex-column justify-content-center align-items-center">
                    <div>
                        <img loading="lazy" src="{{ 'gmo_i.svg' | asset_url }}" alt="Vegan icon">
                    </div>
                    <div class="icons-text mt-3">
                        Non GMO
                    </div>
                </div>
                <div class="col-lg-2 w-100-sm d-flex flex-column justify-content-center align-items-center">
                    <div>
                        <img loading="lazy" src="{{ 'lactose_i.svg' | asset_url }}" alt="Vegan icon">
                    </div>
                    <div class="icons-text mt-3">
                        Lactose free
                    </div>
                </div>
                <div class="col-lg-2 w-100-sm d-flex flex-column justify-content-center align-items-center">
                    <div>
                        <img loading="lazy" src="{{ 'natural_i.svg' | asset_url }}" alt="Vegan icon">
                    </div>
                    <div class="icons-text mt-3">
                        All natural
                    </div>
                </div>
            </div>
            <div class="container hero-carouse-btn-parent ">
                <div class="position-relative d-none">
                    <div class="css--prev-btn-hero d-flex justify-content-start d-lg-none">
                        <button class="customPrevBtnHero caps text-center d-flex d-sm-inline align-items-center disabled">
                            <img loading="lazy" class="carousel-arrow-img" src="{{ 'arrow-left.svg' | asset_url }}" alt="Arrow">
                        </button>
                    </div>
                    <div class="css--next-btn-hero d-flex justify-content-end d-lg-none">
                        <button class="customNextBtnHero caps d-flex d-sm-inline align-items-center">
                            <img loading="lazy" class=" carousel-arrow-img" src="{{ 'arrow-right.svg' | asset_url }}" alt="Arrow">
                        </button>
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>


{{ 'collection-approach.css' | asset_url | stylesheet_tag }}

<section class="alternating-image-text-section">
    <div class="container">
        {% for block in section.blocks %}
            {% if block.settings.image %}
                {% assign is_even = forloop.index0 | modulo: 2 %}
                {% if is_even != 0 %}
                    <div class="row content-block">
                        <div class="col-lg-6 col-12 image-block ">
                            <img src="{{ block.settings.image | img_url: '800x800' }}" alt="{{ block.settings.title }}">
                        </div>
                        <div class="col-lg-6 col-12 text-block">
                            <h2>{{ block.settings.title }}</h2>
                            {{ block.settings.rich_text }}
                        </div>
                    </div>
                {% else %}
                    <div class="row content-block">
                        <div class="col-lg-6 col-12 text-block order-1 order-lg-0">
                            <h2>{{ block.settings.title }}</h2>
                            {{ block.settings.rich_text }}
                        </div>
                        <div class="col-lg-6 col-12 image-block order-0 order-lg-1">
                            <img src="{{ block.settings.image | img_url: '800x800' }}" alt="{{ block.settings.title }}">
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        {% endfor %}
    </div>
</section>

{% schema %}
{
  "name": "Alternating Image-Text",
  "class": "alternating-image-text-section",
  "settings": [],
  "blocks": [
    {
      "type": "content",
      "name": "Content Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Section Title"
        },
        {
          "type": "richtext",
          "id": "rich_text",
          "label": "Text",
          "default": "<p>Your text here<p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}

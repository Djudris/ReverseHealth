{{ 'collection-approach.css' | asset_url | stylesheet_tag }}

<section class="alternating-image-text-section">
    <div class="container">
        {% for block in section.blocks %}
            {% if forloop.index | minus: 1 | modulo: 2 == 0 %}
                <div class="row content-block">
                    <div class="col-lg-6 col-12 image-block">
                        <img src="{{ block.settings.image | img_url: '800x800' }}" alt="{{ block.settings.text }}">
                    </div>
                    <div class="col-lg-6 col-12 text-block">
                        <h2>{{ block.settings.title }}</h2>
                        <p>{{ block.settings.text }}</p>
                    </div>
                </div>
            {% else %}
                <div class="row content-block">
                    <div class="col-lg-6 col-12 text-block">
                        <h2>{{ block.settings.title }}</h2>
                        <p>{{ block.settings.text }}</p>
                    </div>
                    <div class="col-lg-6 col-12 image-block">
                        <img src="{{ block.settings.image | img_url: '800x800' }}" alt="{{ block.settings.text }}">
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</section>

{% schema %}
{
  "name": "Alternating Image-Text",
  "class": "alternating-image-text-section",
  "settings": [],
  "blocks": [
    {
      "type": "content",
      "name": "Content Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Section Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Your text here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
